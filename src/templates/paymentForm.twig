{% set paymentmethods = gateway.retrieveAvailablePaymentMethods %}

<ul class="commerce-maksuturva">
  {% for paymentmethod in paymentmethods.paymentmethod %}
    <li class="commerce-maksuturva__payment-method" data-method="{{ paymentmethod.code }}">
      <label class="maksuturva-payment-method">
        <input class="maksuturva-payment-method__input" type="radio" name="paymentMethod" value="{{ paymentmethod.code }}">
        <div class="maksuturva-payment-method__method">
          <div class="maksuturva-payment-method__image">
            <img src="{{ paymentmethod.imageurl }}">
          </div>
          <p class="maksuturva-payment-method__name">{{ paymentmethod.displayname }}</p>
          {% if paymentmethod.extrapaymentmethodfee is defined %}
            <p class="maksuturva-payment-method__disclaimer">+ â‚¬ {{ paymentmethod.extrapaymentmethodfee }}</p>
          {% endif %}
        </div>
      </label>
    </li>
  {% endfor %}
</ul>
